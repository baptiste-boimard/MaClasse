<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="NewEvent.Title" Label="Titre" Required="true" />
        <MudTextField @bind-Value="NewEvent.Location" Label="Lieu" />

        <MudDatePicker @bind-Date="SelectedDate" Label="Date" />

        <MudTimePicker Label="Heure de début"
                       @bind-Time="StartTime" />

        <MudTimePicker Label="Heure de fin"
                       @bind-Time="EndTime" />
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save">Ajouter</MudButton>
    </DialogActions>
</MudDialog>
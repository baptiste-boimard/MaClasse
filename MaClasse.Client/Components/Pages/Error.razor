@page "/NotFound"

<PageTitle>404 - Page non trouvée</PageTitle>

    <div class="content-404">
        <div class="hero-section">
            <h1 class="text-404">404</h1>
            <p class="message-principal">Oups ! La page que vous cherchez est introuvable.</p>
            <p class="message-secondaire">Il semblerait que vous ayez tapé une mauvaise adresse ou que la page ait été déplacée.</p>
            <button class="btn-retour-accueil" @onclick="NavigateToHome">
                Retourner à l'accueil
            </button>
        </div>

        <div class="illustration-section">
            <p class="illustration-placeholder">?</p>
            <p class="illustration-text">Nous cherchons toujours...</p>
        </div>
    </div>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}

<style>
